<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="@dimen/size_refresh"
        android:layout_height="@dimen/size_refresh"
        android:layout_marginHorizontal="@dimen/margin_button"
        android:layout_marginVertical="@dimen/margin_button"
        app:fabCustomSize="@dimen/floating_button"
        android:src="@drawable/load"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/organizeLastNameButton"
        android:layout_width="@dimen/floating_button"
        android:layout_height="@dimen/floating_button"
        android:layout_marginHorizontal="@dimen/margin_button"
        android:layout_marginVertical="@dimen/margin_button"
        android:src="@drawable/ic_list_organize"
        app:fabCustomSize="@dimen/floating_button"
        app:backgroundTint="#7A909B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/organizeWorkButton"
        android:layout_width="@dimen/floating_button"
        android:layout_height="@dimen/floating_button"
        android:visibility="gone"
        android:src="@drawable/ic_list_organize"
        android:layout_marginHorizontal="@dimen/margin_button"
        android:layout_marginVertical="@dimen/margin_button"
        app:fabCustomSize="@dimen/floating_button"
        app:backgroundTint="#7A909B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>